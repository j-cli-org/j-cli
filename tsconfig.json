{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "checkJs": false,
        "target": "ESNext",
        // "noImplicitAny": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": [
            "ES6"
        ],
        // "noEmit": true
    },
    "include": [
        "packages/**/*",
        "bin/**/*",
        "lib/**/*"
    ],
    "exclude": [
        "./packages/quickcommander",
        "node_modules",
        "dist/**/*",
        "bundle/**/*"
    ],
}